<div class="container">
  <div class="row">
    <div class="main-box">
      
      <h1>Your Courses</h1>

      <h2><%= @course.title %></h2>
      <br />
      <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-yellow pull-right' %>
      <%= link_to 'Add a New Section', new_instructor_course_section_path(@course), class: 'btn btn-yellow btn-lg' %>

      <ul>
        <% @course.sections.each do |section| %>
          <li><%= section.title %></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>