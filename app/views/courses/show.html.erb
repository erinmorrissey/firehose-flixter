<div class="container">
  <div class="row">
    <div class="main-box">

      <div class="col-xs-12 text-center">
        <h1><%= @course.title %></h1>
        <%= image_tag @course.image, class: 'img-responsive' %>

        <br />
      </div>

      <div class="col-sm-4 col-xs-12 text-center">
        <span class="label label-default">
          <%= number_to_currency @course.cost %>
        </span>

        <br />
        <br />
        
        <% if current_user && current_user.enrolled_in?(@course) %>
          <h3 class="label label-info">You are Enrolled!</h3>
        <% else %>
          <% if @course.free? %>
            <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-pink', method: :post %>
          <% else %>

            <!-- begin Stripe button/form -->
            <%= form_tag course_enrollments_path(@course) do %>
              <article>
                <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                <% end %>
              </article>

              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto"></script>
            <% end %> 
            <!-- end Stripe button/form -->
            
          <% end %>
        <% end %>

        <br />
        <br />

        <% if current_user && current_user == @course.user %>
          <br /><br />
          <%= link_to 'Administer this Course', instructor_course_path(@course), class: 'btn btn-yellow btn-large' %>
        <% end %>




      </div>

      <div class="col-sm-8 col-xs-12">
        <%= @course.description %>
      </div>


      <div class="col-xs-12">      
        <hr />

        <h2>Get Coding Buddy</h2>

        <% @course.sections.each do |section| %>
          <div class="col-xs-12 section">
            <h3><%= section.title %></h3>
            
            <% section.lessons.each do |lesson| %>
              <%= link_to lesson_path(lesson) do %>
                <div class="col-sm-6 col-xs-12">
                  <div class="lesson text-center">
                    <h4><%= lesson.title %></h4>
                    <hr />
                    <h5><%= lesson.subtitle %></h5>
                  </div>
                </div>
              <% end %>
            <% end %>
            
          </div>
        <% end %>

      </div>

    </div>
  </div>
</div>