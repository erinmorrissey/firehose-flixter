<div class="container">
  <div class="row">
    <div class="main-box">

      <h1 class="text-center" id="callout">Learn something today</h1>

      <hr />

      <% @courses.each do |course| %>

        <h2 class="text-center">
          <%= link_to course.title, course_path(course) %>
        </h2>
        <br />
        <div class="col-sm-8 col-xs-12">
          <%= course.description %>
        </div>
        <div class="col-sm-4 col-xs-12 text-center">
          <%= link_to 'More Details...', course_path(course), class: 'btn btn-pink btn-large' %>
        </div>

      <% end %>

    </div>
  </div>
</div>