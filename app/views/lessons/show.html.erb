<div class="container">
  <div class="row">
    <div class="main-box">

      <h1><%= current_lesson.title %></h1>
      <h2><%= current_lesson.subtitle %></h2>

      <div class="col-xs-12 text-center">
        <video id="video-embed" class="video-js vjs-default-skin vjs-big-play-centered vjs-fluid" controls preload="auto" width="auto" height="auto"
    poster="/assets/black.jpg" data-setup="{}">
          <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
          <noscript>
            <p class="vjs-no-js">
              To view this video please enable JavaScript, and consider upgrading to a web browser that
              <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
            </p>
          </noscript>
        </video>
      </div>

    </div>
  </div>
